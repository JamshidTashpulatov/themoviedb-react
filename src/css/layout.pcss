:global .page-wrapper {
  max-width: 90em;
  margin: 0 auto;
}

:global .pageSlider-enter {
  transform: translateX(100%);
}

:global .pageSlider-enter.pageSlider-enter-active {
  transform: translateX(0);
}

:global .pageSlider-leave {
  transform: translateX(0);
}

:global .pageSlider-leave.pageSlider-leave-active {
  transform: translateX(-100%);
}
