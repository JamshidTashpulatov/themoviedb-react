@import "./colors.pcss";

:global body {
  background: var(--bgcolor);
  margin: 50px 0 0 0;
}

:global .container {
  max-width: 60em;
  margin: 0 auto;
  overflow: hidden;
}

:global .container-large {
  margin: 0 auto;
  overflow: hidden;
  max-width: 80em;
}

