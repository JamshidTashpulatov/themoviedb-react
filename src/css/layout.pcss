@import "./variables.pcss";

:global body {
  /* background: var(--bgcolor); */
  background: #f4f7f6;
  margin: 40px 0 0 0;

  @media (--desktop) {
    margin: 50px 0 0 0;
  }
}

.container {
  max-width: 60em;
  margin: 0 auto;
  /* overflow: hidden; */
}

:global .container {
  max-width: 60em;
  margin: 0 auto;
  /* overflow: hidden; */
}

:global .container-large {
  margin: 0 auto;
  overflow: hidden;
  max-width: 80em;
}

