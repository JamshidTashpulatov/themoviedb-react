.cast {
  display: flex;
  margin: 2em 0;
  flex-wrap: wrap;
  justify-content: space-between;
  align-content: space-around;
}

.cast-member {
  flex-basis: 13%;
  margin-bottom: 2em;
  text-align: center;
}

.cast-member--name {
  font-weight: 400;
  margin: 0.5em 0;
}

.cast-member--character {
  font-size: 14px;
}

.cast-member--image {
  border-radius: 50%;
  border: 3px solid #fff;
}
