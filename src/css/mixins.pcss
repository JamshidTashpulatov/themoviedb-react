@import './colors.pcss';

@define-mixin scrollbar {
  overflow-y: scroll;

  &::-webkit-scrollbar {
    width:  0.7em;
    height: 0.7em;
  }

  &::-webkit-scrollbar-thumb {
    background: var(--bgaltlight);
  }

  &::-webkit-scrollbar-track {
    background: var(--greylight);
  }

  // For Internet Explorer
  scrollbar-face-color: var(--bgaltlight);
  scrollbar-track-color: var(--greylight);
}
