@value colors: './colors.pcss';
@value bgaltlight, greylight from colors;

@define-mixin scrollbar {
  overflow-y: scroll;

  &::-webkit-scrollbar {
    width:  0.7em;
    height: 0.7em;
  }

  &::-webkit-scrollbar-thumb {
    background: bgaltlight;
  }

  &::-webkit-scrollbar-track {
    background: greylight;
  }

  // For Internet Explorer
  scrollbar-face-color: bgaltlight;
  scrollbar-track-color: greylight;
}
