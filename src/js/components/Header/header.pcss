@import "../../../css/variables.pcss";

.header {
  position: fixed;
  width: 100%;
  top: 0;
  background: var(--bgalt);
  z-index: 100;
}

.navigation {
  display: flex;
  justify-content: space-between;
  line-height: 40px;
  font-size: 16px;

  @media (--desktop) {
    font-size: 28px !important;
    line-height: 50px;
  }
}

.menu {
  text-align: center;
  display: flex;
  margin: 0;
}

.menuitem {
  padding: 0 15px;
  font-weight: 600;
  list-style-type: none;
}

.menulink {
  color: #fff;
  text-decoration: none;
  text-transform: uppercase;
}

.active {
  color: var(--fontcolor);
}

.button {
  cursor: pointer;
  background: transparent;
  border: none;
  outline: none;
  color: #fff;
  font-size: 20px !important;

  @media (--desktop) {
    font-size: 28px !important;
  }
}
